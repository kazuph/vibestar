{
  "name": "vibestar",
  "version": "1.0.0",
  "description": "AI時代のフルスタック開発テンプレート",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "pnpm": {
    "onlyBuiltDependencies": [
      "workerd",
      "esbuild"
    ],
    "overrides": {
      "esbuild": ">=0.25.0",
      "lodash": ">=4.17.23",
      "lodash-es": ">=4.17.23",
      "undici": ">=7.18.2"
    }
  },
  "scripts": {
    "dev": "concurrently -n db,mail,web -c blue,magenta,green \"pnpm dev:db\" \"pnpm dev:mail\" \"pnpm dev:web\"",
    "dev:db": "turso dev --db-file local.db --port 18080",
    "dev:mail": "mailpit --listen :18025 --smtp :11025",
    "dev:web": "react-router build && wrangler dev --port 15173",
    "build": "react-router build",
    "typecheck": "react-router typegen && tsc --build --noEmit",
    "lint": "prettier --check .",
    "start": "wrangler dev",
    "deploy": "wrangler deploy",
    "format": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push --force",
    "db:studio": "drizzle-kit studio",
    "services:stop": "pkill -f mailpit || true",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "otp": "curl -s http://localhost:18025/api/v1/messages | jq -r '.messages[0].ID' | xargs -I{} curl -s 'http://localhost:18025/api/v1/message/{}' | jq -r '.Text' | grep -oE '[0-9]{6}' | head -1"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@react-router/serve": "^7.12.0",
    "better-auth": "^1.4.15",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "isbot": "^5.1.33",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.12.0",
    "react-router-auto-routes": "^0.7.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260120.0",
    "@hono/vite-dev-server": "^0.24.1",
    "@playwright/test": "^1.57.0",
    "@react-router/dev": "^7.12.0",
    "@tailwindcss/vite": "^4.1.18",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.4",
    "wrangler": "^4.59.2"
  }
}
